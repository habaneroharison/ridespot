<style>
  body {
    background-image: url(<%= asset_path 'touring_bg.jpg' %>);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-color: #f8f8f8;
  }
</style>

<h1 style="text-align: center; margin-bottom: 30px; color: white; text-shadow: 1px 1px 3px rgba(0,0,0,0.6);">
  <%= @location %>のツーリングスポット
</h1>

<% if @spots.any? %>
  <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px;">
    <% @spots.each do |spot| %>
      <div style="width: 300px; background-color: rgba(255,255,255,0.95); border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <h3 style="margin-bottom: 10px;">
          <%= link_to spot.name, spot_path(spot), style: "text-decoration: none; color: #0077cc;" %>
        </h3>
        <p style="font-size: 14px; color: #666;"><%= truncate(spot.description, length: 100) %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p style="text-align: center; margin-top: 50px; font-size: 20px; color: white; text-shadow: 1px 1px 3px rgba(0,0,0,0.6);">
    まだこの地域のスポットは投稿されていません。
  </p>
<% end %>