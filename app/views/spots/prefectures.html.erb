<h1 style="text-align: center; margin-bottom: 30px;">都道府県別ツーリングスポット</h1>

<% @regions.each do |region_name, prefectures| %>
  <h2 style="margin-top: 40px; color: #555; font-size: 24px; border-bottom: 2px solid #ccc; padding-bottom: 5px;"><%= region_name %></h2>

  <div style="display: flex; flex-wrap: wrap; justify-content: flex-start; gap: 20px; margin-top: 20px;">
    <% prefectures.each do |prefecture| %>
      <div style="background-color: <%= region_color(region_name) %>; border-radius: 10px; padding: 20px 30px; text-align: center; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.2s;">
        <%= link_to prefecture, prefecture_spots_path(prefecture), style: "text-decoration: none; color: #fff; font-size: 18px;" %>
      </div>
    <% end %>
  </div>
<% end %>