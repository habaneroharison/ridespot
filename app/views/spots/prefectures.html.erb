<style>
  body {
    background-image: url(<%= asset_path 'touring_bg.jpg' %>);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-color: #f8f8f8;
  }

  .region-title {
    color: #fff;
    text-shadow: 1px 1px 3px rgba(0,0,0,0.7);
  }

  .prefecture-card {
    background-color: rgba(0, 0, 0, 0.6);
    color: #fff;
    text-decoration: none;
    padding: 20px 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    transition: transform 0.2s;
  }

  .prefecture-card:hover {
    transform: scale(1.05);
  }
</style>

<h1 style="text-align: center; margin-bottom: 30px; color: white; text-shadow: 2px 2px 5px rgba(0,0,0,0.7);">都道府県別ツーリングスポット</h1>

<% @regions.each do |region_name, prefectures| %>
  <h2 class="region-title" style="margin-top: 40px; font-size: 24px; border-bottom: 2px solid rgba(255,255,255,0.5); padding-bottom: 5px;"><%= region_name %></h2>

  <div style="display: flex; flex-wrap: wrap; justify-content: flex-start; gap: 20px; margin-top: 20px;">
    <% prefectures.each do |prefecture| %>
      <div class="prefecture-card">
        <%= link_to prefecture, prefecture_spots_path(prefecture), style: "color: white; font-size: 18px;" %>
      </div>
    <% end %>
  </div>
<% end %>